#include <iostream>
using namespace std;
bool IsSimpleNumber(int a);

int main()
{
	while (true)
	{
		system("cls");
		const int N = 100;
		int a[N] = { 0 };
		int n;
		while (true)
		{
			cout << "Enter the amount of elements (n <= 100): ";
			cin >> n;
			if (n > 0 && n <= N) break;
			cout << "Error!";
		}
		//for (int i = 0; i < n; i++)
		//a[i] = rand() % 100;

		cout << "Enter array elements: " << endl;
		for (int i = 0; i < n; i++)
		{
			cout << "a[" << (i + 1) << "] = ";
			cin >> a[i];
		}
		system("cls");

		cout << "Source array: " << endl;
		for (int i = 0; i < n; i++)
			cout << a[i] << ", ";

		int s = 0;
		for (int i = 0; i < n; i++)
		{
			if (IsSimpleNumber(a[i]))
			{
				int j=0;
				for ( ; j < i; j++)
				{
					if (a[j] == a[i]) break;
				}
				if (j == i) s++;
			}
		}
		cout << "There are " << s << " prime numbers. ";
		system("pause");


		system("cls");
		char yes;
		cout << "Would you like to countinie? Press y/Y: " << endl;
		cin >> yes;
		if (yes == 'y' || yes == 'Y')
			continue;
		break;
	}
	return 0;
}

bool IsSimpleNumber(int a)
{
	for (int i = 2; i <= sqrt(a); i++)
	if (a % i == 0)
		return false;

	return true;
}
